# Database Configuration
POSTGRES_DB=todolist
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_KEY=your-super-secret-key-min-32-characters-long-for-security
JWT_ISSUER=ToDoListAPI
JWT_AUDIENCE=ToDoListClient

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7207;http://localhost:5294

# Connection String
CONNECTION_STRING=Host=localhost;Port=5432;Database=todolist;Username=postgres;Password=postgres

# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username

# Optional: External Services
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
